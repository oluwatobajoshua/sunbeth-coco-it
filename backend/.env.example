# Port for the backend server
PORT=3001

# Firebase Admin SDK
# Path to service account JSON file (optional if using Application Default Credentials)
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json

# Microsoft Azure AD / MSAL Configuration
MSAL_TENANT_ID=your-tenant-id
MSAL_CLIENT_ID=your-client-id
MSAL_APPROLE_SUPERADMIN=SuperAdmin
MSAL_APPROLE_ADMIN=Admin
MSAL_APPROLE_MANAGER=Manager

# Bootstrap Super Admin (optional - for initial setup)
BOOTSTRAP_SUPERADMIN_EMAIL=admin@example.com

# Google Cloud Project ID
GCLOUD_PROJECT=your-project-id
